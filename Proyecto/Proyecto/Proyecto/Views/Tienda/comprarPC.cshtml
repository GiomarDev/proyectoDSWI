@model IEnumerable<Proyecto.Models.ItemPc>

@{
    ViewBag.Title = "comprarPC";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}
@if (Session["carritoPC"] != null)
{
    <section class="panel-primary">
        <section class="panel-heading">
            PROCESO DE COMPRAS DE PC
        </section>
        <section class="panel-body">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.codigo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.desc)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.precio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.cantidad)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.subTotal)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.foto)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.codigo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.desc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.precio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.cantidad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.subTotal)
                        </td>
                        <td>
                            <img class="imgArt" src="@Url.Content(item.foto)" />
                        </td>
                        <td>
                            @Html.ActionLink("Eliminar", "eliminarItemPC", new { id = item.codigo })
                        </td>
                    </tr>
                }

            </table>
        </section>
    </section>

    <section id="monto">
        <h1>Total a Pagar: S/@(((decimal)ViewBag.total).ToString("0.00"))</h1><br />
        @Html.ActionLink("< RETORNAR", "carritoComprasPC", "", new { @class = "btn btn-primary" })
        @Html.ActionLink("PAGAR", "pagoPc", "", new { @class = "btn btn-danger" })
    </section>
}
else
{
    <h3 style="color:red">No has seleccionado ingredientes</h3>
}