@model IEnumerable<Proyecto.Models.ItemMonitor>

@{
    ViewBag.Title = "comprarMonitor";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<section class="panel-primary">
    <section class="panel-heading">
        PROCESO DE COMPRA DE MONITORES
    </section>
    <section class="panel-body">

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.codigo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.desc)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.precio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.cantidad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.subTotal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.foto)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.codigo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.desc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.precio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cantidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.subTotal)
                    </td>
                    <td>
                        <img class="imgPro" src="@Url.Content(item.foto)" />
                    </td>
                    <td>

                        @Html.ActionLink("ELIMINAR", "eliminarItemMonitor", new { id = item.codigo })
                    </td>
                </tr>
            }

        </table>
    </section>
</section>
<section id="monto">
    TOTAL A PAGAR: S/@(((decimal)ViewBag.total).ToString("0.00"))
    <br />
    @Html.ActionLink("<RERTORNAR", "carritoComprasMonitor", "", new { @class = "btn btn-primary" })
    @Html.ActionLink("PAGAR", "PagoMonitor", "", new { @class = "btn btn-danger" })
</section>

