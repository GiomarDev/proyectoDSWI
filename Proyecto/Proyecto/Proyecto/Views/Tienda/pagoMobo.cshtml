@model IEnumerable<Proyecto.Models.ItemMotherboard>

@{
    ViewBag.Title = "pagoMobo";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<h2>Realizar Transaccion de Motherboard</h2>
@Html.ActionLink("RETORNAR", "carritoComprasPC", "", new { @class = "btn btn-primary" })
<section class="panel-primary">
    <section class="panel-heading"> REALIZAR LA TRANSACCION </section>
    <section class="panel-body">
        @using (Html.BeginForm("FinalizarVentaMobo", "Tienda"))
        {
            @Html.Label("INGRESE DNI")
            @Html.TextBox("dni", "", new { @class = "form-control" })
            @Html.Label("NOMBRES Y APELLIDOS")
            @Html.TextBox("nom", "", new { @class = "form-control" })<br />
            <input type="submit" value="ACEPTAR" class="btn btn-success" />}
    </section>
</section>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cantidad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.subtotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.foto)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.subtotal)
            </td>
            <td>
                <img class="imgArt" src="@Url.Content(item.foto)" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
    }

</table>
