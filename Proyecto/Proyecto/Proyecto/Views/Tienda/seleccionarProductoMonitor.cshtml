@model Proyecto.Models.CarritoMonitor

@{
    ViewBag.Title = "seleccionarProductoMonitor";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<h2>PROCESO DE SELECCION DE PRODUCTOS</h2>
@Html.Partial("_PartialRegistroMonitor")

<section id="columna2">
    <section class="panel-primary">
        <section class="panel-heading">
            INGRESE CANTIDAD:
        </section>
        <section class="panel-body">
            @using (Html.BeginForm("agregarProductoMonitor", "Tienda"))
            {
                @Html.Hidden("id", Model.codigo, new { @class = "form-control" });
                @Html.TextBox("cant", "", new { @class = "form-control" })
                @Html.ActionLink("Cancelar", "carritoComprasMonitor", "", new { @class = "btn btn-danger" })
                <input type="submit" value="Aceptar" class="btn btn-success" />
            }
        </section>
    </section>

</section>

