<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.css" />
    <script type="text/javascript"
            src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
    <script src="https://kit.fontawesome.com/3e45b6a58a.js" crossorigin="anonymous"></script>

    <!-- CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

    <!-- jQuery and JS bundle w/ Popper.js -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <header>
        <nav class="menu">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a class="navbar-brand pr-5 mr-5" href="#">COMPUPLAST</a>

                <div class="collapse navbar-collapse ml-4 " id="menu">

                    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                        <li class="nav-item dropdown pr-4 border ">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" data-target="dropdown_target" href="#">COMPUTADORAS<span class="caret"></span></a>
                            <div class="dropdown-menu" aria-labelledby="dropdown_target">
                                <a class="dropdown-item">@Html.ActionLink("LISTA DE COMPUTADORAS", "listadoPc", "Pc")</a>
                                <a class="dropdown-item">@Html.ActionLink("REGISTRO DE COMPUTADORAS", "nuevaPc", "Pc")</a>
                            </div>

                        </li>
                        <li class="nav-item dropdown pr-4 border ">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" data-target="dropdown_target" href="#">ORDEN DE COMPRA<span class="caret"></span></a>
                            <div class="dropdown-menu" aria-labelledby="dropdown_target">
                                <a class="dropdown-item">LISTADO ORDENES DE COMPRA</a>
                                <a class="dropdown-item">GENERAR ORDEN DE COMPRA</a>
                                <a class="dropdown-item">submenu 3</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown pr-4 border ">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" data-target="dropdown_target" href="#">VENTA <span class="caret"></span></a>
                            <div class="dropdown-menu border " aria-labelledby="dropdown_target">
                                <a>@Html.ActionLink("GENERAR VENTA", "carritoCompras", "Tienda", new { @class = "dropdown-item text-dark" })</a>
                                <a class="dropdown-item">LISTADO DE FACTURAS</a>
                                <a class="dropdown-item">submenu 3</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown pr-4 border ">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" data-target="dropdown_target" href="#">PRODUCTO <span class="caret"></span></a>
                            <div class="dropdown-menu" aria-labelledby="dropdown_target">
                                <a class="dropdown-item">LISTADO GENERAL</a>
                                <a class="dropdown-item">NUEVO PRODUCTO</a>
                                <a class="dropdown-item">submenu 3</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown pr-4 border ">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" data-target="dropdown_target" href="#">CARRITO DE COMPRAS <span class="caret"></span></a>
                            <div class="dropdown-menu" aria-labelledby="dropdown_target">
                                <a>@Html.ActionLink("Carrito de Compras", "Index", "Tienda")</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown pr-4 border ">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" data-target="dropdown_target" href="#">REPORTES<span class="caret"></span></a>
                            <div class="dropdown-menu" aria-labelledby="dropdown_target">
                                <a>@Html.ActionLink("REPORTES DE PEDIDOS", "listadoPedidos", "Pedido")</a>
                                <a>@Html.ActionLink("REPORTES DE PEDIDOS POR FECHAS", "listadoPedidosXFechas", "Pedido")</a>
                                <a class="dropdown-item">submenu 3</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown pr-4 border ">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" data-target="dropdown_target" href="#">SESION USUARIO<span class="caret"></span></a>
                            <div class="dropdown-menu" aria-labelledby="dropdown_target">
                                <a>@Html.ActionLink("EDITAR USUARIO", "proveedores", "Usuario", new { @class = "dropdown-item text-dark" })</a>
                                <a>@Html.ActionLink("CERRAR SESION", "Index", "Usuario")</a>
                                <a class="dropdown-item">submenu 3</a>
                            </div>
                        </li>
                    </ul>

                </div>
            </nav>
        </nav>
    </header>
    <figure>
        <img id="banner" src="~/Imagenes/banner3.jpg" />
    </figure>
    @RenderBody()
    <footer>
        <h6>COMPULAST 2020 COPYRIGTH ©</h6>
    </footer>

</body>
</html>
