@model IEnumerable<Proyecto.Utils.SP_LISTAPEDIDOS_Result>

@{
    ViewBag.Title = "listadoPedidos";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<h2>LISTADO DE PEDIDOS</h2>
<p>
        <a class="btn btn-primary" href="@Url.Action("reportePedidosPDF")">VER REPORTE EN PDF</a>
</p>

@*<p>
    <a class="btn btn-primary" href="@Url.Action("reportePedidosEXEL")">VER REPORTE EN EXCEL</a>
</p>*@

<table class="table">
    <tr>
        <th>
            Codigo de Pedido
        </th>
        <th>
            Nombre del Cliente
        </th>
        <th>
            Nombre del Empleado
        </th>
        <th>
            Fecha de inicio
        </th>
        <th>
            Fecha Fin
        </th>
        <th>
            Pais
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IDE_PED)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NOM_CLI)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EMPLEADO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FEC_PED)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FEN_PED)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PAI_PED)
        </td>
    </tr>
}

</table>
