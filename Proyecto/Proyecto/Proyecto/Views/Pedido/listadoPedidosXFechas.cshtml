@model IEnumerable<Proyecto.Utils.SP_LISTAPEDIDOSxFECHAS_Result>

@{
    ViewBag.Title = "listadoPedidosXFechas";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<h2>LISTADO DE PEDIDOS POR FECHAS</h2>

@using (Html.BeginForm()) { 
<section class="panel panel-primary">
    <section class="panel-heading">
        SELECCIONE RANGO DE FECHAS
    </section>
    <section class="panel-body">
        FECHA INICIAL
        @Html.TextBox("f1", "", new { @class = "form-control", @type = "Date" })
        <br />
        FECHA LIMITE
        @Html.TextBox("f2", "", new { @class = "form-control", @type = "Date" })<br />
        <input type="submit" value="Consultar" class="btn btn-success" />
        <a class="btn btn-primary" href="@Url.Action("reportePedidosPDFXFechas", "Pedido", new { f1= ViewBag.f1, f2= ViewBag.f2})">VER REPORTE EN PDF</a>
    </section>
</section>
}

<table class="table">
    <tr>
        <th>
            Codigo de Pedido
        </th>
        <th>
            Nombre del Cliente
        </th>
        <th>
            Nombre del Empleado
        </th>
        <th>
            Fecha de inicio
        </th>
        <th>
            Fecha Fin
        </th>
        <th>
            Pais
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IDE_PED)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NOM_CLI)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EMPLEADO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FEC_PED)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FEN_PED)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PAI_PED)
        </td>
    </tr>
}

</table>
